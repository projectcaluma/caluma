{
  "extends": [
    "config:base"
  ],
  "pip_requirements": {
    "fileMatch": ["requirements.*txt$"],
    "packageRules": [{
      "packageNames": ["django"],
      "allowedVersions": "<1.12"
    }]
  },
  "docker": {
    "packageRules": [{
      "packageNames": ["python"],
      "allowedVersions": "3.6"
    }],
    "pinDigests": true
  }
}
