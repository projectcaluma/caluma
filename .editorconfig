root = true

[*]
insert_final_newline     = true
end_of_line              = lf
charset                  = utf-8
trim_trailing_whitespace = true

[*.sql]
indent_style = space
indent_size  = 4

[*.py]
indent_style = space
indent_size  = 4

[*.json]
indent_style = space
indent_size  = 2

[*.yml]
indent_style = space
indent_size  = 2

[Makefile]
indent_style = tab
indent_size  = 4
